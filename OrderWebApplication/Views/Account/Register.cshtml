@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_MainPage";
}

<!-- Section: Design Block -->
<section class="text-center" style="margin:-7% -14%;padding:0">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 200px!important;
background-position: center;
  background-size: cover;

        "></div>
    <!-- Background image -->


    <section class="h-100" style="margin-top:-5%;text-align:left">
        <div class="container h-100">
            <div class="row justify-content-sm-center h-100">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">

                    <div>
                        <div class="card shadow-lg">
                            <div class="card-body p-5">
                                <h1 class="fs-4 card-title fw-bold mb-4">Register</h1>
                                <form asp-action="Register" asp-controller="Account" method="POST" class="needs-validation" autocomplete="off">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="mb-3">
                                        <label class="mb-2 text-muted" asp-for="Email">Email</label>
                                        <input asp-for="Email" id="Email" type="text" class="form-control" name="Email" value="" required autofocus>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                        <div class="invalid-feedback">
                                            Email is required
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="mb-2 text-muted" asp-for="Password">Password</label>
                                        <input asp-for="Password" id="Password" type="password" class="form-control" name="Password" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>
                                    <div class="mb-3">
                                        <label class="mb-2 text-muted" asp-for="ConfirmPassword">ConfirmPassword</label>
                                        <input asp-for="ConfirmPassword" id="ConfirmPassword" type="password" class="form-control" name="ConfirmPassword" required>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                    </div>
                                    <div class="mb-3">
                                        <label class="mb-2 text-muted" asp-for="PhoneNumber">PhoneNumber</label>
                                        <input asp-for="PhoneNumber" id="PhoneNumber" type="text" class="form-control" name="PhoneNumber" required>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                    </div>
                                    <p class="form-text text-muted mb-3">
                                        By registering you agree with our terms and condition.
                                    </p>

                                    <div class="align-items-center d-flex">
                                        <button type="submit" value="Register" class="btn btn-primary ms-auto">
                                            Register
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer py-3 border-0">
                                <div class="text-center">
                                    Already have an account? <a asp-action="Login" class="text-dark">Login</a>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-5 text-muted">
                            Copyright &copy; 2022 &mdash; UIS Global
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>

<!-- Section: CSS styling -->
@section styles{
    <style>
        body {
            overflow:scroll;
            overflow-x:hidden;
        }
    </style>
}
@section scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}

