@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_MainPage";

}

<!-- Section: Design Block -->
<section class="text-center" style="margin:-7% -14%;padding:0">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 200px!important;
background-position: center;
  background-size: cover;

        "></div>
    <!-- Background image -->


    <section class="h-100" style="margin-top:-5%;text-align:left">
        <div class="container h-100">
            <div class="row justify-content-sm-center h-100">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">

                    <div>
                        <div class="card shadow-lg">
                            <div class="card-body p-5">
                                <h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
                                <form method="POST" class="needs-validation" asp-action="Login" autocomplete="off">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="mb-3">
                                        <label class="mb-2 text-muted" for="email">E-Mail Address</label>
                                        <input asp-for="Email" type="email" id="Email" type="email" class="form-control" name="Email" value=""  required autofocus>
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                        <div class="invalid-feedback">
                                            Email is invalid
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="mb-2 w-100">
                                            <label class="text-muted" for="password">Password</label>
                                            <a  class="float-end" style="text-decoration:none">
                                                Forgot Password?
                                            </a>
                                        </div>
                                        <input asp-for="Password" type="password" id="Password" class="form-control" name="Password" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                        <div class="invalid-feedback">
                                            Password is required
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <p class="text-danger" style="font-size: 13px">
                                                @Html.ValidationMessage("IncorrectPassword")
                                            </p>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div class="form-check">
                                            <input type="checkbox" name="remember" id="remember" class="form-check-input">
                                            <label for="remember" class="form-check-label">Remember Me</label>
                                        </div>
                                        <button type="submit" class="btn btn-primary ms-auto">
                                            Login
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer py-3 border-0">
                                <div class="text-center">
                                    Don't have an account? <a class="text-dark" asp-action="Register">Create One</a>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-5 text-muted">
                            Copyright &copy; 2022 &mdash; UIS Global
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
<!-- Section: Design Block -->
<!-- Section: CSS styling -->
@section styles{
    <style>
        body {
            overflow: scroll;
            overflow-x: hidden
        }
    </style>
}

    <!-- Section: Js Scripts -->
    @section scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
    }


