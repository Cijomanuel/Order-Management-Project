@model IEnumerable<OrderWebApplication.Entity.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<div style="padding-bottom:7vh;margin:3%">

    <div style="padding:3%;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;border-radius:12px;">
        <h2 style="margin-bottom:3%">List Of All Customers</h2>

        <p>
            Note: Customer Addition is restricted to Add Orders page in the Sales Section
        </p>


        <table class="table" id="table_id">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mobile)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.TranscationNo)
                    </th>*@
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                       @* <td>
                            @Html.DisplayFor(modelItem => item.TranscationNo)
                        </td>*@
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-primary">Edit</a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@*Start<--Js Scripts -->Start*@


@section Scripts{
    <script>
        $(document).ready(function() {
            $('#table_id').DataTable({
                "processing": true,
                "serverSide": false,
                "filter": true
            });
        })
    </script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
}

    @*End<--Js Scripts -->End*@