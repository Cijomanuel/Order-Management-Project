@model OrderWebApplication.Entity.Models.Product

@{
    ViewData["Title"] = "ProductDelete";
}
<div style="padding-bottom:7vh;margin:3%">

    <div style="padding:3%;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;border-radius:12px;">
        <h2>Product Deletion Page</h2>

        <p>Are you sure you want to delete this?</p>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Product Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-2">
                    Product Type
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductType)
                </dd>
                <dt class="col-sm-2">
                    Product Unit
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Unit)
                </dd>
                <dt class="col-sm-2">
                    Purchase Unit Price
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PurchaseUnitPrice)
                </dd>
                <dt class="col-sm-2">
                    Selling Unit Price
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SellingUnitPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Avaliable)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Avaliable)
                </dd>
            </dl>

            <form asp-action="ProductDelete">
                <input type="hidden" asp-for="ProductId" />
                <input type="submit" value="Delete" class="btn btn-danger" style="margin-right:1vw"/> 
                <a asp-action="ShowProducts" class="btn btn-primary">Cancel</a>
            </form>
        </div>
    </div>
</div>